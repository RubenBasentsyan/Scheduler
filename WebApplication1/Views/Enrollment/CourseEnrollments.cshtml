@using WebApplication1.Models.ViewModels.Enrollments
@model IEnumerable<WebApplication1.Models.ViewModels.Enrollments.DisplayEnrollmentVm>

@{
    ViewBag.Title = $"Enrollments for {ViewBag.CourseName.ToString()}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enrollments for @ViewBag.CourseName.ToString()</h2>

<p>
    @Html.ActionLink("Add New Student To Course", "Create",routeValues: new { Model?.First().CourseId, isPersonEnrolling = false },htmlAttributes: new { @class = "btn btn-outline-success "})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model ?? new List<DisplayEnrollmentVm>()) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.ActionLink("Unenroll", "Delete", new { id = item.EnrollmentId })
        </td>
    </tr>
}

</table>
