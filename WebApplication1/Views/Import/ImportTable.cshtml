@section CustomScripts
{
    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
}

@{
    ViewBag.Title = "Import Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Import a new schedule table</h2>


@using (Html.BeginForm("ImportTable", "Import", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    <label for="enrollments" class="custom-file-upload btn btn-warning">
                        Select File
                    </label>
                    <input name="enrollments" style="display: none" type="file" id="enrollments">
                </p>
                <input type="submit" value="Upload" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}

<div>
</div>

<script type="text/javascript">
    $('#enrollments').change(function() {
        var i = $(this).prev('label').clone();
        var file = $('#enrollments')[0].files[0].name;
        $(this).prev('label').text(file);
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}