@model WebApplication1.Models.ViewModels.ParametersViewModel

@{
    ViewBag.Title = "Set Params";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Set scheduling parameters</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.ConcurrencyLimit, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConcurrencyLimit, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ConcurrencyLimit, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Days, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Days, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Days, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeSlots, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.TimeSlots, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.TimeSlots, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-success"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Schedule", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}